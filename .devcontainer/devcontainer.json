{
  "name": "Heyris - Container",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:24-bookworm",
  "features": {},
  "postCreateCommand": "npm install -g pnpm",
  "forwardPorts": [3000, 3001, 3002, 3003, 3004, 3005, 3006],
  "portsAttributes": {
    "3000": {
      "label": "HeyRis API Server",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "HeyRis Web Server",
      "onAutoForward": "notify"
    },
    "3002": {
      "label": "HeyJSON Web Server",
      "onAutoForward": "notify"
    },
    "3003": {
      "label": "HeyDiff Web Server",
      "onAutoForward": "notify"
    },
    "3004": {
      "label": "HeyUI Web Server",
      "onAutoForward": "notify"
    },
    "3005": {
      "label": "HeyPartner Web Server",
      "onAutoForward": "notify"
    },
    "3006": {
      "label": "HeyTag Web Server",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "typescript.tsdk": "node_modules/typescript/lib",
        "files.associations": {
          "wrangler.json": "jsonc"
        },
        "tailwindCSS.experimental.classRegex": [
          ["([\"'`][^\"'`]*.*?[\"'`])", "[\"'`]([^\"'`]*).*?[\"'`]"]
        ],
        "tailwindCSS.classFunctions": [
          "cva",
          "tv",
          "tw",
          "clsx",
          "tw\\.[a-z-]+"
        ],
        "tailwindCSS.experimental.configFile": {
          "apps/heyris/src/app/globals.css": "apps/heyris/src/**",
          "packages/design-system/src/styles.css": "packages/design-system/src/**",
          "packages/themes/src/styles.css": "packages/themes/src/**"
        }
      },
      "extensions": [
        "streetsidesoftware.code-spell-checker",
        "usernamehw.errorlens",
        "formulahendry.auto-rename-tag",
        "formulahendry.auto-close-tag",
        "bradlc.vscode-tailwindcss",
        "mhutchie.git-graph",
        "eamodio.gitlens"
      ]
    }
  }
}
